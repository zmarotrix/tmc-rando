	POIN DEBUGUPGRADES; WORD 0x2002B3F 7
	POIN DEBUGSTUFF; WORD 0x2002AE8 7
	POIN DEBUGWIND; WORD 0x2002A83 1
#endif
WORD 0 0 0 //terminator

